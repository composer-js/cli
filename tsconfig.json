{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "typeRoots": ["node_modules/@types"],
        "maxNodeModuleJsDepth": 5
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
