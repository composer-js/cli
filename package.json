{
    "name": "@composer-js/cli",
    "version": "1.3.0",
    "description": "A command line utility that generates Composerjs style client and server application code from one or more OpenAPI specification files.",
    "repository": "https://gitlab.com/AcceleratXR/composerjs/composer.git",
    "author": "Jean-Philippe Steinmetz <info@acceleratxr.com>",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "yarn lint && tsc",
        "docs": "typedoc --plugin typedoc-plugin-markdown --out docs --target esnext --mode file src",
        "test": "jest --coverage ./test",
        "test:watch": "jest --coverage --watch",
        "checkup": "yarn dlx @yarnpkg/doctor \"$@\"",
        "deploy-docs": "ts-node tools/gh-pages-publish",
        "lint": "eslint -c .eslintrc.js --ext .ts ./src ./test",
        "report-coverage": "cat ./coverage/lcov.info | coveralls",
        "commit": "git-cz",
        "semantic-release": "semantic-release",
        "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
        "precommit": "lint-staged",
        "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
        "postversion": "git push && git push --tags",
        "run": "node dist/lib/cli.js"
    },
    "dependencies": {
        "@composer-js/core": "^6.0.0-rc.20",
        "@types/command-line-args": "^5.2.3",
        "@types/istextorbinary": "^2.3.4",
        "@types/shelljs": "^0.8.15",
        "@types/uuid": "^10.0.0",
        "axios": "^1.7.9",
        "command-line-args": "^6.0.1",
        "decode-uri-component": "^0.4.1",
        "deepmerge": "^4.3.1",
        "handlebars": "^4.7.8",
        "handlebars-helpers": "^0.10.0",
        "istextorbinary": "^9.5.0",
        "mkdirp": "^3.0.1",
        "nconf": "^0.12.1",
        "reflect-metadata": "^0.2.2",
        "shelljs": "^0.8.5",
        "uuid": "^11.0.3",
        "winston": "^3.17.0",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/eslint": "^8",
        "@types/jest": "^29.5.6",
        "@types/node": "^18.18.6",
        "@types/rimraf": "^3.0.0",
        "@types/supertest": "^6",
        "@typescript-eslint/eslint-plugin": "^6.11.0",
        "@typescript-eslint/parser": "^6.11.0",
        "commitizen": "^4.3.0",
        "copyfiles": "^2.4.1",
        "dir-compare": "^4.2.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-jsdoc": "^46.8.2",
        "eslint-plugin-no-null": "^1.0.2",
        "jest": "^29.7.0",
        "jest-config": "^29.7.0",
        "rimraf": "^4.4.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typedoc": "^0.25.4",
        "typedoc-plugin-markdown": "^3.16.0",
        "typescript": "^5.2.2"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "{src,test}/**/*.ts": [
            "prettier --write",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        },
        "mongodbMemoryServer": {
            "version": "6.0.8"
        }
    },
    "packageManager": "yarn@4.0.1",
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "main": "dist/cli.js",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist",
        "docs",
        "templates"
    ],
    "bin": {
        "composer": "dist/cli.bin.js"
    }
}
